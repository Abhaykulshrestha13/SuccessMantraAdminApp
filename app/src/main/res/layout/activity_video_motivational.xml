<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoMotivational"
    android:orientation="vertical"
    android:background="@drawable/background_all">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="20dp">
        <VideoView
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:id="@+id/vid_view_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </VideoView>
    </androidx.cardview.widget.CardView>
    <EditText
        android:elevation="20dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:id="@+id/et_video"
        android:layout_weight="1"
        android:hint="Enter Title"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </EditText>
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="30dp"
        app:cardElevation="20dp">
        <Button
            android:id="@+id/btn_select_video"
            android:background="@drawable/button_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Video"
            android:textSize="30dp">
        </Button>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:elevation="30dp"
            app:cardElevation="20dp">
            <Button
                android:id="@+id/btn_upload_vid"
                android:background="@drawable/button_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upload Video"
                android:textSize="30dp">
            </Button>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        app:cardElevation="20dp"
        android:background="@color/black"
        android:backgroundTint="#FF0000">

        <Button
            android:id="@+id/btn_edit_upload_vid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black"
            android:gravity="center"
            android:text="Edit uploaded videos"
            android:textSize="25dp">
        </Button>
    </androidx.cardview.widget.CardView>
</LinearLayout>