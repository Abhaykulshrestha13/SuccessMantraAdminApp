<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoMotivational"
    android:orientation="vertical"
    android:background="@drawable/background_all">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="20dp">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="center"
            android:fitsSystemWindows="true"
            android:id="@+id/img_view_sq"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="30dp"
        app:cardElevation="20dp">
        <Button
            android:id="@+id/btn_select_sq"
            android:background="@drawable/button_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Image"
            android:textSize="30dp">
        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:elevation="30dp"
        app:cardElevation="20dp">
        <Button
            android:id="@+id/btn_upload_sq"
            android:background="@drawable/button_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upload Image"
            android:textSize="30dp">
        </Button>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        app:cardElevation="20dp"
        android:background="@color/black"
        android:backgroundTint="#FF0000">

        <Button
            android:id="@+id/btn_edit_upload_sq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black"
            android:gravity="center"
            android:text="Edit uploaded Images"
            android:textSize="25dp">
        </Button>
    </androidx.cardview.widget.CardView>
</LinearLayout>